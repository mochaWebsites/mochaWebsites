<section id="add-blog-section">
  <div class="main-content-container">
    <header>
      <h2 class="capitalize">Add Blog</h2>
    </header>
    <div class="box">
      <div class="topper"></div>
      <div class="meta-content-container">
        <div class="content-container">
          <form id="add-form" action="/admin/blog/add" method="post" enctype="multipart/form-data" novalidate>
            <label>
              <h4>Title</h4>
              <input type="text" name="title" id="add-title" placeholder="Blog Title" required>
              <p class="input-message hidden">What's the title?</p>
            </label>
            <label>
              <h4>Date</h4>
              <input type="date" name="date" id="add-date" required>
              <p class="input-message hidden">Invalid date</p>
            </label>
            <label>
              <h4>Genre</h4>
              <select name="genre">
                {{#each genres}}
                  <option value="{{ id }}">{{ title }}</option>
                {{/each}}
              </select>
              <p class="input-message hidden">Invalid genre</p>
            </label>
            <label>
              <h4>Tags</h4>
              {{#each tags}}
                <div class="checkbox-container">
                  <input type="checkbox" name="tags[]" id="tag-{{ title }}" value="{{ id }}">
                  <label for="tag-{{ title }}" class="checkbox-label">{{ title}}</label>
                </div>
              {{/each}}
              <p class="input-message hidden">Invalid tag selection</p>
            </label>
            <label>
              <h4>Content</h4>
              <input type="file" name="mdFile" id="add-file">
              <p class="input-message hidden">Invalid file</p>
            </label>
            <button type="submit">Add</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
<section id="edit-blog-section">
  <div class="main-content-container">
    <header>
      <h2>Edit Blog</h2>
    </header>
    <div class="box">
      <div class="topper"></div>
      <div class="meta-content-container">
        <div class="content-container"> 
          <h4>All Blogs</h4>
          <ul class="admin-list">
            {{#each blogs}}
              <li data-id="{{ id }}">
                {{ title }}
                <div class="controls">
                  <a href="/admin/blog/edit/{{ id }}">Edit</a>
                </div>
              </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
