<section id="edit">
  <header>
    <h2>Edit Blog</h2>
  </header>
  <div class="box">
    <div class="topper"></div>
    <div class="meta-content-container">
      <div class="content-container">
        <form id="edit-form" action="/admin/edit" method="POST" novalidate>
          <label>
            <h4>Title</h4>
            <input type="text" name="edit-title" id="adit-title" placeholder="New Title" required>
            <p class="input-message hidden">What's the title?</p>
          </label>
          <label>
            <h4>Date</h4>
            <input type="date" name="edit-date" id="edit-date" required>
            <p class="input-message hidden">Invalid date</p>
          </label>
          <label>
            <h4>Content</h4>
            <textarea name="edit-content" id="edit-content" placeholder="markdown text" required></textarea>
            <p class="input-message hidden">Invalid content</p>
          </label>
          <button type="submit">Send</input>
        </form>
      </div>
    </div>
  </div>
</section>