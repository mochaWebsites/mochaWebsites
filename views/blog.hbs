<header class="blog-header">
  <h1>{{ title }}</h1>
  <ul>
    <li><a>blogs</a>><a>{{ genre }}</a>><a>{{ title }}</a></li>
    <li class="date">{{{ formatDate date }}}</li>
  </ul>
</header>
<article class="box shadow">
  <div class="topper"></div>
  <div class="meta-content-container">
    {{#each htmlSections }}
      <div class="content-container">
        <header id="header-{{ @index }}" class="subsection-header">
          <img src="/images/SVG/logo-border-thick.svg" class="header-icon">
          <h3>{{ heading }}</h3>
        </header>
        {{{content}}}
      </div>
    {{/each}}
  </div>
  <div class="topper"></div>
</article>
<aside class="sidebar">
  <ul>
    <h3>Directory</h3>
    {{#each htmlSections }}
      <a href="#header-{{ @index }}"><li >{{ heading }}</li></a>
    {{/each}}
  </ul>
</aside>


