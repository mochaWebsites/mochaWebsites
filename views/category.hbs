<section id="add-category">
  <header>
    <h2>Add Category</h2>
  </header>
  <div class="box small-box">
    <div class="topper"></div>
    <div class="meta-content-container">
      <div class="content-container">
        <form id="edit-category-form" action="/admin/categories/add" method="POST" novalidate>
          <label>
            <h4>Title</h4>
            <input type="text" name="title" id="category-title-add" placeholder="Title" required>
            <p class="input-message hidden">Invalid Category Title</p>
          </label>
          <button type="submit">Add</input>
        </form>
      </div>
    </div>
  </div>
</section>
